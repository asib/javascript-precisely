{
  "compilerOptions": {
    "target": "ES2015",
    "lib": [
      "ES2015"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "outDir": "lib",
    "declaration": true
  },
  "include": [
    "src",
    "types"
  ]
}
